// -----------------------------------------------------------------------------
// This file contains all styles related to the header of the site/application.
// -----------------------------------------------------------------------------

@include show-template("images/bg_about_me.jpg", true);

.site-header{	
	@include get-grid('base', true);

	&__logo{
		@include grid-span(2, 1);
	}
	&__main-navigation{
		@include grid-span(3, 6)
	}
	&__social-links{
		@include grid-span(3, 6)
	}
}


.header-logo{
	&__name{
		display: inline-block;
		transform: rotate(-90deg) translateY(-1.64em);
		margin-top: 3.6em;
		text-decoration: none;
		letter-spacing: .08em;
		//font-size: $font-size-l;
		font-size: 2.4em;
		color: $text-color;
		font-family: $font-display;
		text-transform: uppercase;
		line-height: .9;		
	}
	&__description{
		display: inline-block;
		margin: 4.56em 0 0 .2em;
		line-height: 1.15;			
		span{
			&:first-child{
				padding: .5em .4em 0 .4em;
				box-shadow: 0.7rem 0 0 #222,-0.2rem 0 0 #222;		    
				z-index: 5;

			}
			padding: 0.4em;
			text-decoration: none;
			position: relative;
			//background-color: $text-color;
			background-color: $text-color;
			color: #fff;
			text-align: left;
			font-family: $font-body;
			text-transform: none;
			font-size: $font-size-s;
			font-style: italic;
			font-weight: 600;
			box-shadow: 0.3rem 0 0 $text-color,-.2rem 0 0 $text-color;
		}
	}
}

.social-links{
	margin-top: 6em;
	float: right;
	&__item{
		display: inline-block;
		float: left;
		height: 2em;
		width: 2em;
		&:not(:last-child){
			margin-right: .7em;
		}
		svg{
			width: 2em;
			height: 2em;
			transition: .2s cubic-bezier(0.46,-1.59, 0.35, 3.13);
			&:hover{
				margin: -.5em 0 0 -.5em;
				width: 3em;
				height: 3em;
				fill: $hover-color;
			}
		}

	}
}

.site-content{
	@include get-grid('base', false);
	//display: none;
}